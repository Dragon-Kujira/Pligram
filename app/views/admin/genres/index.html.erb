<div class="container my-5">
  <h3 class="text-center mb-4">
   <span class="px-3 py-2 rounded">ジャンル一覧・追加（管理者）</span>
  </h3>
</div>

<div class="container">
  <div class="row pt-4 justify-content-center"> <!-- justify-content-centerを追加 -->
    <div class="col-lg-6"> <!-- col-6をcol-lg-6に変更 -->
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group mt-4">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-4 justify-content-center"> <!-- justify-content-centerを追加 -->
    <div class="col-lg-6"> <!-- col-6をcol-lg-6に変更 -->
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-sm btn-outline-primary ml-1' %>
                <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-outline-danger ml-1' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
