<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
    <%= form_with model: @posts, url: admin_post_path(@posts), method: :patch do |f| %>
      <table>
        <tr>
        <div class="form-group">
         <th><%= f.label :ジャンル %></th>
         <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
        </div>
        </tr>
        <tr>
        <div class="form-group">
          <th><%= f.label :レビュータイトル %></th>
          <td><%= f.text_field :caption, placeholder:"レビュータイトル名" %></td>
        </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :作品タイトル %></th>
            <td><%= f.text_field :title, placeholder:"タイトル名" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :住所 %></th>
            <td><%= f.text_area :address, size: "50", placeholder:"ここに住所を記述します" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :説明 %></th>
            <td><%= f.text_area :body, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
          </div>
        </tr>
        </tr>
        <tr>
        <div class="form-group">
          <th><%= f.label :画像 %></th>
          <th><%= f.file_field :images, multiple: true, accept: "image/*" %></th>
        </div>
       </tr>
        <tr>
        <div class="form-action">
          <th><%= f.submit "変更を保存", class:"btn btn-success" %></th>
        </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>

