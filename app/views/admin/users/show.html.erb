<div class="container">
    <h5 class="m-4"><span style="background-color:#eeeeee">
    <%= @user.name %>さんのユーザー登録情報</span></h5>
</div>
<div class="container">
  <div class="row">
   <div class="col-6">
     <table class=" table table-borderless">
      <tbody>
        <tr>
        <td>ユーザーID</td>
        <td><%= @user.id %></td>
        </tr>
        <tr>
        <td>ユーザー名</td>
        <td><%= @user.name %></td>
        </tr>
        <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
        </tr>
        <tr>
        <td>ユーザーステータス</td>
        <% if @user.is_active == true %>
        <td class="text-success">有効</td>
        <% else %>
        <td class="text-secondary">退会</td>
        <% end %>
        </tr>


      </tbody>
        <tr>
        <td></td>
        <td><%= link_to "編集する",edit_admin_user_path(@user), class: "btn btn-success btn-sm" %>
        </tr>
    </table>
    </div>
  </div>
</div>
