<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
      <div class="card-header bg-primary text-white text-center">
       <h5 class="card-title mb-0"><%= @user.name %>さんのマイページ</h5>
      </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <%= image_tag @user.get_image, size: '100x100', class: "rounded-square shadow-sm" %>
          </div>
          <h4 class="mb-3">登録情報</h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="bi bi-person-fill"></i>
              <strong> ユーザーネーム:</strong> <%= @user.name %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-envelope-fill"></i>
              <strong> メールアドレス:</strong> <%= @user.email %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-file-earmark-text-fill"></i>
              <strong> 投稿数:</strong> <%= @user.posts.count %>
              <span>(<%= link_to "投稿一覧を見る", user_posts_path(@user), class: "text-primary" %>)</span>
            </li>
            <li class="list-group-item">
              <i class="bi bi-file-earmark-text-fill"></i>
              <strong> ブックマーク数:</strong> <%= @user.favorites.count %>            
              <span>(<%= link_to "ブックマーク一覧を見る", user_favorites_path(@user), class: "text-primary" %>)</span>
            </li>            
          </ul>
          <div class="d-flex justify-content-between mt-4">
          <div>
            <%= link_to "ユーザー情報を編集する", edit_admin_user_path(@user), class: "btn btn-primary px-4" %>
          </div>
          <% if admin_signed_in? %>
            <div>
              <%= link_to "ユーザー情報を削除する", admin_user_path(@user), method: :delete,  class: "btn btn-primary px-4", data: { confirm: "ユーザーに関連するすべてのデータも同時に削除されます。本当に削除してよろしいですか？" } %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
