<div class="container">
    <h4 class="m-4"><span style="background-color:#eeeeee">
    <%= @user.name  %>さんのユーザー情報編集</span></h4>
</div>
<div class="container">
 <div class="row">
  <div class="col-8">
   <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
   <table class=" table table-borderless">
    <tbody>
      <tr>
      <td>ユーザーID</td>
      <td><%= f.label :"#{@user.id}" %></td>
      </tr>
      <tr>
      <td><%= f.label :"氏名" %></td>
      <td><%= f.text_field :name %>
      </td>
      </tr>
      <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email,size: "50" %></td>
      </tr>
      <th><%= f.label :ユーザーステータス %></th>
      <td><%= f.radio_button :is_active, true %>
       <%= f.label :is_active, "有効" %>
       <%= f.radio_button :is_active, false %>
       <%= f.label :is_active, "退会" %>
      </td>
    </tbody>
      <tr>
      <td></td>
      <td><%= f.submit "変更を保存する", class: "btn btn-success" %></td>
      </tr>
   </table>
   <% end %>
   </div>
  </div>
 </div>
