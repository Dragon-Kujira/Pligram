<div class="container mt-5" style="max-width: 400px;">
<h2 class="text-left mb-4">管理者ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow-sm" }) do |f| %>

    <div class="mb-3">
      <%= f.label :email, t('devise.sessions.new.email'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
     <%= f.label :password, t('devise.sessions.new.password'), class: "form-label" %>
     <div class="input-group">
       <%= f.password_field :password, autocomplete: "current-password", class: "form-control password-field" %>
       <button type="button" class="btn btn-outline-secondary show-password-btn" onclick="togglePasswordVisibility()">表示</button>
     </div>
    </div>
  
    <script>
    function togglePasswordVisibility() {
      var passwordField = document.querySelector('.password-field');
      if (passwordField.type === 'password') {
        passwordField.type = 'text';
      } else {
        passwordField.type = 'password';
      }
    }
    </script>


    <div class="d-grid">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
    
<% end %>
</div>


