<div class="container mt-5" style="max-width: 400px;">
<h2 class="text-left mb-4">管理者ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow-sm" }) do |f| %>

    <div class="mb-3">
      <%= f.label :email, t('devise.sessions.new.email'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :パスワード, t('devise.sessions.new.password'), class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="d-grid">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
    
<% end %>
</div>


