<div class="container mt-5" style="max-width: 400px;">
<h2 class="text-left mb-4">ユーザー登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card p-4 shadow-sm" }) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

 <div class="mb-3">
   <%= f.label :name, class: "form-label" %><br>
   <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>
  
  <div class="mb-3">
   <%= f.label :email, t('devise.sessions.new.email'), class: "form-label" %>
   <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="d-grid">
  <%= f.submit "ユーザー登録", class: "btn btn-primary" %>
</div>
<% end %>
</div>

<div class="text-center mt-3">
  <%= render "public/shared/links" %>
</div>
