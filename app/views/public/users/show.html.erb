<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
      <div class="card-header bg-primary text-white text-center">
       <h5 class="card-title mb-0"><%= @user.name %>さんのマイページ</h5>
      </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <%= image_tag @user.get_image, size: '100x100', class: "rounded-square shadow-sm" %>
          </div>
          <h4 class="mb-3">登録情報</h4>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="bi bi-person-fill"></i>
              <strong> ユーザーネーム:</strong> <%= @user.name %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-envelope-fill"></i>
              <strong> メールアドレス:</strong> <%= @user.email %>
            </li>
            <li class="list-group-item">
              <i class="bi bi-file-earmark-text-fill"></i>
              <strong> 投稿数:</strong> <%= @user.posts.count %>
              <span>(<%= link_to "投稿一覧を見る", userposts_path(@user), class: "text-primary" %>)</span>
            </li>
          </ul>
          <% if user_signed_in? && @user == current_user %>
          <div class="d-flex justify-content-left mt-4">
            <%= link_to "編集する", edit_my_page_path, class: "btn btn-primary px-4" %>
          </div>
          <% end %>
        </div>
      </div>
      <!-- カードの直下に退会リンクを配置 -->
      <% if user_signed_in? && @user == current_user %>
        <div class="text-left mt-3">
          <%= link_to "退会する", unsubscribe_path, class: "text-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

