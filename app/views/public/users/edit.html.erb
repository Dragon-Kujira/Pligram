<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="text-center mb-4">プロフィール編集</h2>
          <%= form_with model: @user, url: edit_my_page_path, method: :patch, html: {class: "form"} do |f| %>
            
            <!-- ユーザー名 -->
            <div class="form-group mb-4">
              <%= f.label :name, "ユーザー名", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
            </div>
            
            <!-- メールアドレス -->
            <div class="form-group mb-4">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
            
            <!-- プロフィール画像 -->
            <div class="form-group mb-4">
              <%= f.label :image, "プロフィール画像", class: "form-label" %><br>
              <%= f.file_field :image, accept: "image/*"  %>
            </div>
            
            <!-- 送信ボタン -->
            <div class="form-group text-center">
              <%= f.submit "変更を保存", class: "btn btn-success btn-block w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>