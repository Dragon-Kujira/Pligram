<div class="container">
  <div class="card mb-3 border-0">
   <div class="card-header border-0" style="padding-top: 0; padding-bottom: 0;">
    <h5 class="m-4"><span id="comment_count">コメント：<%= post.comments.count %>件</span></h5>
   </div>
    <div class="card-body">
    <div class="mb-3">
    <% @comments.each do |comment| %>
      <div class="card mb-2 border-0">
        <div class="card-body">
          <%= image_tag comment.user.get_image, size: '50x50', class: "img-thumbnail float-left mr-2" %>
          <p class="card-text"><strong><%= comment.user.name %></strong><br>
            <%= comment.body %><br>
            <%= comment.created_at.strftime('%Y/%m/%d') %></p>
          <% if comment.user == current_user %>
           <%= link_to '削除', [comment.post, comment], method: :delete, data: { confirm: 'このコメントを削除しますか？', remote: true, "turbolinks" => false } %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= paginate @comments %>
    </div>
  </div>
 </div>