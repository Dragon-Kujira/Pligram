<% if user_signed_in? || admin_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, method: :get, local: true, class: "input-group shadow-sm rounded" do %>
      <%= text_field_tag :query, params[:query], placeholder: "ユーザー名またはキャプション", class: "form-control" %>
      <div class="input-group-append">
        <%= submit_tag "検索", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% end %>