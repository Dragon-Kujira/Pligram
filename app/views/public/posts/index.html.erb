<div class="container">
  <div class="row">
    <div class= col-4>
       <h4 class="m-4"><span style="background-color:#eeeeee">投稿一覧</span></h4>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
      <table class="table">
        <thead class=" thead-light ">
          <tr>
            <th>レビュータイトル</th>
            <th>作品タグ</th>
            <th>説明</th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.caption ,post_path(post.id) %></td>
              <td><%= post.tags.map(&:name).join(', ') %></td>
              <td><%= post.body %></td>
              <td><%= post.genre.name %></td>
              <td id="favorite_btn_<%= post.id %>">
              <%= render "public/favorites/btn", post: post %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
 </div>
</div>
